@tailwind base;
/* Write your global styles here, in PostCSS syntax */
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply h-full;
    @apply bg-transparent;
  }

  html {
    @apply h-full;
    @apply font-sans;
    @apply subpixel-antialiased;

    @apply transition;
    @apply duration-150;

    @apply text-gray-900;
    @apply bg-gray-50;
  }

  html.dark {
    @apply text-gray-300;
    @apply bg-black;
  }
}
